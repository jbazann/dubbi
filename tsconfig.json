{
  "extends": "astro/tsconfigs/strictest",
  "include": [
    ".astro/types.d.ts",
    "**/*",
  ],
  "exclude": [
    "dist"
  ],
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": "./",
    "typeRoots": ["./node_modules/@types", "./types"],
    "plugins": [{ "name": "@astrojs/ts-plugin" }],
    "paths": {
      "@c/*": ["src/components/*"],
      "@a/*": ["src/assets/*"],
      "@l/*": ["src/layouts/*"],
      "@lib/*": ["src/lib/*"],
      "@s/*": ["src/styles/*"],
      "@p/*": ["public/*"]
    }
  }
}