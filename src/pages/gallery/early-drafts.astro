---
import MainLayout from "@l/MainLayout.astro"
import en from '@lib/lang/en'
import cookies from '@lib/cookies.json'
import Intro from "@c/pages/Intro.astro"

export const prerender = false

let theme
if (Astro.cookies.has(cookies.theme)) theme = Astro.cookies.get(cookies.theme)?.value
let {hideIntro} = Object.fromEntries(Astro.request.method === 'POST' ? await Astro.request.formData() : [])
---

<MainLayout langlib={en} theme={theme} >
    {hideIntro !== 'true' && <Intro lang="en"/> }
    <section>
        <h2>
            Learning drafts
        </h2>
        <p>
            This section contains poems I have decided to put in the "Early Drafts" collection.
        </p>
        <p>
            This collection contains work I consider flawed in one way or another, but I am
            yet unable to fix.
        </p>
        <hr>
        <p>
            Available poems: 
        </p>
        <ul class="inline-list">
            <li><em>pretty-little-lady</em></li>, 
            <li><em>the-old-man-and-death</em></li>, 
            <li><em>the-end-of-i</em></li>,
            <li><em>muse</em></li>,
            <li><em>reality</em></li>.
        </ul>
    </section>
</MainLayout>