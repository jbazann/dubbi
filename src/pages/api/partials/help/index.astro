---
import { getLocale } from "@lib/ssr"
import En from "./en.astro"
import Es from "./es.astro"

export const partial = true
export const prerender = false

const {tutorial = null, ext_tutorial = null, essential = null, navigation = null} = Object.fromEntries(await Astro.request.formData())
const base = !(tutorial || ext_tutorial || essential || navigation)

const props = {tutorial,ext_tutorial,essential,navigation,base}
const locale = getLocale(Astro.request,Astro.preferredLocale)
---

{
locale === 'es' &&
<Es props={props} />
}

{
locale === 'en' &&
<En props={props} />
}