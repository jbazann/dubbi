---
import CommandTrigger from "@c/main-layout/CommandTrigger.astro"

const { lang } = Astro.props

export const prerender = true
export const getStaticPaths = (() => {    
    return [
        {
            props: {
                lang: 'es'
            }
        },{
            props: {
                lang: 'en'
            }
        }
    ]
}) 
---

{lang === 'es' &&
<section>
    <h2>Ayuda: echo</h2>
    <p>
        Imprime un mensaje en la consola.
    </p>
    <hr>
    <p class="no-bottom-margin"><span class="simple-preface">Alias: </span> echo.
    </p>
    <p class="no-bottom-margin"><span class="simple-preface">Modo de uso: </span> echo &lt;mensaje&gt;
    </p>
    <h3>Ejemplos: </h3>
    <ul>
        <li><CommandTrigger cmd="echo hola">
            echo hola</CommandTrigger>
        </li>
        <li><CommandTrigger cmd='echo "hola pero con varias palabras"'>
            echo "hola pero con varias palabras"</CommandTrigger>
        </li>
        <li><CommandTrigger cmd="echo 'hola pero con varias palabras y comillas simples'">
            echo 'hola pero con varias palabras y comillas simples'</CommandTrigger>
        </li>
        <li><CommandTrigger cmd="echo hola igual también se puede sin comillas pero en una versión futura puede que no">
            echo hola esto también es válido pero podría dejar de serlo en una versión futura</CommandTrigger>
        </li>
    </ul>
</section>
}

{lang === 'en' &&
<section>
    <h2>Help: echo</h2>
    <p>
        Prints a message in the console.
    </p>
    <hr>
    <p class="no-bottom-margin"><span class="simple-preface">Alias: </span> echo.
    </p>
    <p class="no-bottom-margin"><span class="simple-preface">Usage: </span> echo &lt;message&gt;
    </p>
    <h3>Examples:</h3>
    <ul>
        <li><CommandTrigger cmd="echo hi">
            echo hi</CommandTrigger>
        </li>
        <li><CommandTrigger cmd='echo "hi but with several words"'>
            echo "hi but with several words"</CommandTrigger>
        </li>
        <li><CommandTrigger cmd="echo 'hi but with several words and simple quotes'">
            echo 'hi but with several words and simple quotes'</CommandTrigger>
        </li>
        <li><CommandTrigger cmd="echo hi this is also valid but it may no longer be in a future version">
            echo hi this is also valid but it may no longer be in a future version</CommandTrigger>
        </li>
    </p>
</section>
}
